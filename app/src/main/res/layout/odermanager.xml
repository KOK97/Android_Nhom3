<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OderManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề Quản lý đơn hàng -->
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="QUẢN LÝ ĐƠN HÀNG"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Thanh tìm kiếm -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm đơn hàng"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="12dp"
            android:background="@drawable/search_bar_bg"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <!-- Bảng danh sách đơn hàng -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề cột -->
            <TableRow
                android:background="#f2f2f2"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã sản phẩm"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên sản phẩm"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giá"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Ngày đặt"
                    android:textStyle="bold"
                    android:gravity="center" />
            </TableRow>

            <!-- Dữ liệu đơn hàng 1 -->
            <TableRow
                android:padding="12dp"
                android:background="#ffffff">
                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SP12345"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SP12345" />

                <TextView
                    android:id="@+id/gia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500,000 VND" />

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="10/11/2024"
                    android:gravity="center" />
            </TableRow>

            <!-- Dữ liệu đơn hàng 2 -->
            <TableRow
                android:padding="12dp"
                android:background="#f9f9f9">
                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderCode2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SP12346"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderName2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SP12346" />

                <TextView
                    android:id="@+id/gia2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="700,000 VND" />

                <TextView
                    android:id="@+id/orderDate2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="11/11/2024"
                    android:gravity="center" />
            </TableRow>

            <!-- Dữ liệu đơn hàng 3 -->
            <TableRow
                android:padding="12dp"
                android:background="#ffffff">
                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderCode3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SP12347"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderName3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SP12347" />

                <TextView
                    android:id="@+id/gia3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="800,000 VND" />

                <TextView
                    android:id="@+id/orderDate3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="12/11/2024"
                    android:gravity="center" />
            </TableRow>

            <!-- Dữ liệu đơn hàng 4 -->
            <TableRow
                android:padding="12dp"
                android:background="#f9f9f9">
                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderCode4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SP12348"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderName4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SP12348" />

                <TextView
                    android:id="@+id/gia4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="900,000 VND" />

                <TextView
                    android:id="@+id/orderDate4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="13/11/2024"
                    android:gravity="center" />
            </TableRow>

            <!-- Dữ liệu đơn hàng 5 -->
            <TableRow
                android:padding="12dp"
                android:background="#ffffff">
                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderCode5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SP12349"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/orderName5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SP12349" />

                <TextView
                    android:id="@+id/gia5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1,000,000 VND" />

                <TextView
                    android:id="@+id/orderDate5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="14/11/2024"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>

        <!-- Chức năng Thêm, Cập nhật, Xóa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/updateOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:layout_margin="8dp" />

            <Button
                android:id="@+id/deleteOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:backgroundTint="#E62518"
                android:layout_margin="8dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
